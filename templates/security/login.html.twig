{% extends 'base.html.twig' %}

{% block title %}Connexion | {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}

<form method="post">

    {% if app.user %}
        <div class="mb-3">
            Bienvenue sur Club m'aide' {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="box">
        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        {% if error %}
            <div class="alert alert-danger" style="color:#FF0000">{{ error.messageKey|trans(error.messageData, 'security') }}</div> <br>
        {% endif %}
        <div class="mail">
            <label for="inputEmail">Email : </label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="password">
            <label for="inputPassword">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <div class="buttons">
            <label>
                <input type="checkbox" name="_remember_me" checked> Se souvenir de moi
            </label>
            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </div>
    </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
    #}



</form>
{% endblock %}
